<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IIEST Certification</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-color: #3a86ff;
        --secondary-color: #8338ec;
        --background-color: #f8f9fa;
        --text-color: #212529;
        --button-text-color: #ffffff;
      }

      .bod {
        font-family: "Inter", sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: var(--background-color);
        color: var(--text-color);
      }

      .container {
        background-color: white;
        padding: 3rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        max-width: 400px;
        width: 100%;
      }

      h1 {
        font-weight: 600;
        margin-bottom: 2rem;
        font-size: 1.75rem;
      }

      .role-selection {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-bottom: 2rem;
      }

      .role-btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        border: 2px solid var(--primary-color);
        border-radius: 8px;
        background-color: transparent;
        color: var(--primary-color);
        transition: all 0.3s ease;
      }

      .role-btn.active {
        background-color: var(--primary-color);
        color: var(--button-text-color);
      }

      .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .action-btn {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        border: none;
        border-radius: 8px;
        transition: all 0.3s ease;
      }

      .login-btn {
        background-color: var(--primary-color);
        color: var(--button-text-color);
      }

      .signup-btn {
        background-color: var(--secondary-color);
        color: var(--button-text-color);
      }

      .action-btn:hover,
      .role-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      .action-btn:active,
      .role-btn:active {
        transform: translateY(0);
        box-shadow: none;
      }
    </style>
  </head>
  <body>
    {{>navbar}}
    <div class="bod">
      <div class="container">
        <h1>Welcome to IIEST Certification</h1>
        <div class="role-selection">
          <button class="role-btn active" data-role="student">
            I'm a Student
          </button>
          <button class="role-btn" data-role="teacher">
            I'm a Teacher
          </button>
        </div>
        <div class="action-buttons">
          <button class="action-btn login-btn">Login</button>
          <button class="action-btn signup-btn">Sign Up</button>
        </div>
      </div>
    </div>

    <script>
      const roleButtons = document.querySelectorAll(".role-btn");
      const loginButton = document.querySelector(".login-btn");
      const signupButton = document.querySelector(".signup-btn");
      let currentRole = "student";

      roleButtons.forEach((button) => {
        button.addEventListener("click", () => {
          roleButtons.forEach((btn) => btn.classList.remove("active"));
          button.classList.add("active");
          currentRole = button.getAttribute("data-role");
        });
      });

      loginButton.addEventListener("click", () => {
        window.location.href = `${currentRole}Login`;
      });

      signupButton.addEventListener("click", () => {
        window.location.href = `${currentRole}Signup`;
      });
    </script>
  </body>
</html>
